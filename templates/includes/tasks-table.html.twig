{% if tasks|length >= 1 %}
    <table>
        <thead>
            <tr>
                <th>Task</th>
                <th>Priority</th>
                <th>Presupuested hours</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for task in tasks %}
                <tr>
                    <td>{{ task.title }}</td>
                    <td>{{ task.priority }}</td>
                    <td>{{ task.hours }}</td>
                    <td class="buttons">
                        <a href="{{ path('task', {'id':task.id}) }}" class="btn-show">View</a>
                        {% if app.user.id == task.user.id and app.user != null%}
                        <a href="{{ path('task_edit', {'id':task.id}) }} " class="btn-edit">Edit</a>
                        <a href="{{ path('task_delete', {'id': task.id}) }}" class="btn-delete">Delete</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <strong>No hay tareas disponibles en este momento</strong>
{% endif %}